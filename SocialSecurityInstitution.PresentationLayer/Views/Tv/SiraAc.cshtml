@page
@model dynamic
@{
    Layout = null;
}

@section Styles {

}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sıra ve Banko Numarası Göstergesi</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="style.css">

    <style>
        body {
            background-color: #f7f7f7;
            margin: 0;
            height: 100vh;
            display: flex;
            justify-content: center; /* Yatayda ortalama */
            align-items: center; /* Dikeyde ortalama */
        }

        .container {
            display: flex;
            justify-content: center; /* Yatayda ortalama */
            align-items: center; /* Dikeyde ortalama */
            height: 100vh; /* Ekran yüksekliği kadar yükseklik */
            width: 90vw; /* Genişlik %90 */
        }

        .card {
            margin: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            flex: 1;
            min-width: 300px;
        }

        .card-header {
            background-color: #0d6dfcff;
            color: #fff;
        }

        .card-title {
            margin-bottom: 0;
        }

        #sira-numarasi, #banko-numarasi {
            font-size: 12vw;
            font-weight: bold;
            color: #0d6dfcff;
        }
    </style>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const siraNumarasiEl = document.getElementById('sira-numarasi');
            const bankoNumarasiEl = document.getElementById('banko-numarasi');

            // API'den veri alma fonksiyonu
            function getVeri() {
                fetch('https://api.example.com/sira-ve-banko-numarasi')
                    .then(response => response.json())
                    .then(data => {
                        siraNumarasiEl.textContent = data.siraNumarasi;
                        bankoNumarasiEl.textContent = data.bankoNumarasi;
                    });
            }

            // Sayfa yüklendiğinde veriyi al
            getVeri();

            // Her 10 saniyede bir veriyi güncelle
            setInterval(getVeri, 10000);
        });
    </script>
</head>
<body>
    <div class="container">
        <div class="row w-100">
            <div id="BankoNoDiv" class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h1 class="card-title text-center">Banko</h1>
                    </div>
                    <div class="card-body text-center">
                        <h1 class="text-center" id="banko-numarasi">1</h1>
                    </div>
                </div>
            </div>
            <div id="SiraNoDiv" class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h1 class="card-title text-center">Sıra No</h1>
                    </div>
                    <div class="card-body text-center">
                        <h1 class="text-center" id="sira-numarasi">1905</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
