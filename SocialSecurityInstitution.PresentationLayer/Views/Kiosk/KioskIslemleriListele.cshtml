    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalCenterTitle">Kiosk Düzenle</h5>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col mb-3">
                        <label for="modalGuncelleKioskGrupId" class="form-label">Kiosk Adı</label>
                        <select id="modalGuncelleKioskGrupId" class="select2 form-select form-select-lg" data-allow-clear="true">
                            @foreach (var kiosk in Model.KioskGruplari)
                            {
                                <option value="@kiosk.KioskGrupId">@kiosk.KioskGrupAdi</option>
