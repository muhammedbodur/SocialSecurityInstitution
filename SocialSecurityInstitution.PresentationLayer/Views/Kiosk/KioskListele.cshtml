@using SocialSecurityInstitution.BusinessObjectLayer.CommonDtoEntities
@using SocialSecurityInstitution.BusinessObjectLayer.CommonEntities
@using SocialSecurityInstitution.BusinessObjectLayer.Extensions

@model List<SocialSecurityInstitution.BusinessObjectLayer.CommonDtoEntities.KioskGruplariDto>

@{
    int sira = 0;
}

@section Scripts {
    <script>
        $(document).ready(function () {
            function guncelleSiralama() {
                $('tbody tr').each(function (index) {
                    $(this).find('.sira').text(index + 1);
                });
            }
            $('.remove-button').click(function (event) {
                var button = $(event.relatedTarget);
                var kioskGrupId = $(this).data('bs-whatever');
                var trElement = $(this).closest('tr');
                $.ajax({
                    url: "/Kiosk/KioskGrupSil",
                    type: "GET",
                    data: { kioskGrupId: kioskGrupId },
                    success: function (result) {
                        console.log(result);
                        if (result.islemDurum == 1) {
                            trElement.remove();
                            guncelleSiralama();
                        }
                        toastr.success(result.mesaj);
                    },
                    error: function (xhr, status, error) {
                        console.error(error);
                        toastr.error("Kiosk Grup Silme İşlemi Başarısız!");
                    }
                });
            });

            $('#modalKioskGrupGuncelle').one('show.bs.modal', function (event) {
                var button = $(event.relatedTarget);
                var kioskGrupId = button.attr('data-bs-whatever');
                $.ajax({
                    url: "/Kiosk/KioskGrupGetir",
                    type: "GET",
                    data: { kioskGrupId: kioskGrupId },
                    success: function (result) {
                        console.log(result);
                        $("#modalCenterTitle").text("Kiosk Grup Düzenle");
                        $("#modalGuncelleKioskGrupId").val(kioskGrupId);
                        $("#modalGuncelleKioskGrupAdi").val(result.kioskGrupAdi);
                    },
                    error: function (xhr, status, error) {
                        console.error(error);
                        $("#modalKioskGrupGuncelle").modal("hide");
                        $('#modalKioskGrupGuncelle').on('hidden.bs.modal', function (e) {
                            $('body').removeClass('modal-open');
                            $('.modal-backdrop').remove();
                        });
                    }
                });
            });

            $("#btnGuncelle").click(function () {
                var kioskGrupId = $("#modalGuncelleKioskGrupId").val();
                var yeniKioskGrupAdi = $("#modalGuncelleKioskGrupAdi").val();

                $.ajax({
                    url: "/Kiosk/KioskGrupGuncelle",
                    type: "POST",
                    data: {
                        kioskGrupId: kioskGrupId,
                        kioskGrupAdi: yeniKioskGrupAdi
                    },
                    success: function (result) {
                        toastr.success("Kiosk Grup Güncelleme İşlemi Başarılı");
                        $("#kioskGrupAdi_" + kioskGrupId).text(yeniKioskGrupAdi);
                    },
                    error: function (xhr, status, error) {
                        console.error(error);
                        toastr.error("Kiosk Güncelleme İşlemi Başarısız!");
                    }
                });
            });

            $("#btnEkle").click(function () {
                var kioskGrupAdi = $("#modalEkleKioskGrupAdi").val();

                $.ajax({
                    url: "/Kiosk/KioskGrupEkle",
                    type: "POST",
                    data: {
                        kioskGrupAdi: kioskGrupAdi
                    },
                    success: function (result) {
                        console.log(result);
                        toastr.success("Kiosk Grup Ekleme İşlemi Başarılı");
                        var sira = $("tbody tr").length + 1;
                        var yeniSatir = '<tr>' +
                            '<td class="sira">' + sira + '</td>' +
                            '<td>' + kioskGrupAdi + '</td>' +
                            '<td>' + (new Date()).toLocaleString() + '</td>' +
                            '<td>' +
                            '<div class="dropdown">' +
                            '<button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">' +
                            '<i class="bx bx-dots-vertical-rounded"></i>' +
                            '</button>' +
                            '<div class="dropdown-menu">' +
                            '<a class="dropdown-item edit-button" href="#" data-bs-whatever="' + result + '" data-bs-toggle="modal" data-bs-target="#modalKioskGrupGuncelle">' +
                            '<i class="bx bx-edit-alt me-1"></i> <span>Düzenle</span>' +
                            '</a>' +
                            '<a class="dropdown-item remove-botton" href="#" data-bs-whatever="' + result + '">' +
                            '<i class="bx bx-trash me-1"></i> <span>Sil</span>' +
                            '</a>' +
                            '</div>' +
                            '</div>' +
                            '</td>' +
                            '</tr>';

                        // Yeni satırı tabloya ekledik
                        $("tbody").append(yeniSatir);
                    },
                    error: function (xhr, status, error) {
                        console.error(error);
                        toastr.error("Kiosk Grup Ekleme İşlemi Başarısız!");
                    }
                });
            });
        });
    </script>
}



<!-- Basic Bootstrap Table -->
<div class="card">
    <div class="card-header flex-column flex-md-row">
        <div class="head-label text-left">
            <h5 class="card-title mb-0">Kiosk Grupları</h5>
        </div>
        <div class="dt-action-buttons text-end pt-3 pt-md-0">
            <div class="dt-buttons btn-group flex-wrap">
                <button class="btn buttons-collection dropdown-toggle btn-label-primary me-2" tabindex="0" aria-controls="DataTables_Table_0" type="button" aria-haspopup="dialog" aria-expanded="false"><span><i class="bx bx-export me-sm-1"></i> <span class="d-none d-sm-inline-block">Export</span></span></button>
                <button type="button" class="btn btn-secondary create-new btn-primary" tabindex="0"
                        data-bs-toggle="modal"
                        data-bs-target="#modalKioskGrupEkle">
                    <span>
                        <i class="bx bx-plus me-sm-1"></i>
                        <span class="d-none d-sm-inline-block">Yeni Kiosk Grup Ekle</span>
                    </span>
                </button>
            </div>
        </div>
    </div>
    <div class="table-responsive text-nowrap">
        <table class="table">
            <thead>
                <tr>
                    <th>Sıra</th>
                    <th>Kiosk Grup Adı</th>
                    <th>Düzenlenme Tarihi</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @if (Model != null && Model.Count > 0)
                {
                    @foreach (var kioskGrup in Model)
                    {
                        { sira++; }
                        <tr>
                            <td class="sira">@sira</td>
                            <td id="kioskGrupAdi_@kioskGrup.KioskGrupId">@kioskGrup.KioskGrupAdi</td>
                            <td>@kioskGrup.DuzenlenmeTarihi</td>
                            <td>
                                <div class="dropdown">
                                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                        <i class="bx bx-dots-vertical-rounded"></i>
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item edit-button" href="#" data-bs-whatever="@kioskGrup.KioskGrupId" data-bs-toggle="modal" data-bs-target="#modalKioskGrupGuncelle">
                                            <i class="bx bx-edit-alt me-1"></i> <span>Düzenle</span>
                                        </a>
                                        <a class="dropdown-item remove-button" href="#" data-bs-whatever="@kioskGrup.KioskGrupId">
                                            <i class="bx bx-trash me-1"></i> <span>Sil</span>
                                        </a>

                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

<!--/ Basic Bootstrap Table -->
<!-- Modal -->
<div class="modal fade" id="modalKioskGrupEkle" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalCenterTitle">Kiosk Ekle</h5>
                <button type="button"
                        class="btn-close"
                        data-bs-dismiss="modal"
                        aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col mb-3">
                        <label for="nameWithTitle" class="form-label">Kiosk Adı</label>
                        <input type="text"
                               id="modalEkleKioskGrupAdi"
                               class="form-control"
                               placeholder="Kiosk Grup Adı Giriniz" />
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                    Kapat
                </button>
                <button type="button" class="btn btn-primary" id="btnEkle">Kaydet</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="modalKioskGrupGuncelle" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalCenterTitle">Kiosk Grup Düzenle</h5>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col mb-3">
                        <label for="nameWithTitle" class="form-label">Kiosk Grup Adı</label>
                        <input type="text"
                               name="kioskGrupAdi"
                               id="modalGuncelleKioskGrupAdi"
                               class="form-control"
                               placeholder="Kiosk Adı" />
                        <input type="hidden" id="modalGuncelleKioskGrupId" name="kioskGrupId" />
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                    Kapat
                </button>
                <button type="button" class="btn btn-primary" id="btnGuncelle">Güncelle</button>
            </div>
        </div>
    </div>
</div>
