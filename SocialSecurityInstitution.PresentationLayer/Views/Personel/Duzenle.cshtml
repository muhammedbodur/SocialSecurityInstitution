                                        @foreach (var il in Model.Iller)
                                        {
                                            @if (Model.EsininIsIlId == il.IlId)
                                            {
                                                <option value="@il.IlId" selected="selected">@il.IlAdi</option>
                                            }
                                            else
                                            {
                                                <option value="@il.IlId">@il.IlAdi</option>
                                            }
                                        }
                                    }
                                </select>
                            </div>
                            <div class="mb-3 col-md-6">
                                <label for="EsininIsIlceId" class="form-label">EŞ İŞ İLÇE</label>
                                <select id="EsininIsIlceId" asp-for="EsininIsIlceId" class="select2 form-select" data-selected-value="@Model.EsininIsIlceId">
                                    <option value="">Seçiniz</option>
                                    @if (Model?.Ilceler != null)
                                    {
                                        @foreach (var ilce in Model.Ilceler)
                                        {
                                            @if (Model.EsininIsIlceId == ilce.IlceId)
                                            {
                                                <option value="@ilce.IlceId" selected="selected">@ilce.IlceAdi</option>
                                            }
                                            else
                                            {
                                                <option value="@ilce.IlceId">@ilce.IlceAdi</option>
                                            }
                                        }
                                    }
                                </select>
                            </div>
