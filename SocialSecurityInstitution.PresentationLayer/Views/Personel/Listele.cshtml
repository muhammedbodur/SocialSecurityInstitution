@using SocialSecurityInstitution.BusinessObjectLayer.CommonDtoEntities
@using SocialSecurityInstitution.BusinessObjectLayer.CommonEntities
@using SocialSecurityInstitution.BusinessObjectLayer.Extensions

@model List<SocialSecurityInstitution.BusinessObjectLayer.CommonDtoEntities.PersonelRequestDto>

@section Styles {
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/buttons/2.0.1/css/buttons.dataTables.min.css">
    <style>
        /* DataTable çizgi renklerini özelleştirme */
        table.dataTable tbody tr {
            border-top: 1px solid #e0e0e0; /* Çizgi rengini ayarlayın */
        }

        table.dataTable {
            border-collapse: collapse; /* Çizgilerin düzgün görünmesi için */
        }

        table.dataTable thead th,
        table.dataTable tbody tr {
            border-bottom: 1px solid #e0e0e0; /* Tüm çizgi rengini ayarlayın */
        }
    </style>
}


@section Scripts {
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.0.1/js/dataTables.buttons.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.0.1/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.0.1/js/buttons.print.min.js"></script>

    <script>
        // Özel arama fonksiyonu ekliyoruz
        $.fn.dataTable.ext.search.push(
            function (settings, data, dataIndex) {
                const normalize = (term) => {
                    return term
                        .toLocaleLowerCase('tr');
                };

                const searchTerm = normalize($('#userTable_filter input').val());

                // Belirli sütunları normalize edip arama terimiyle karşılaştırıyoruz
                const relevantData = [
                    data[2], // TC Kimlik No
                    data[3], // Sicil No
                    data[4], // Adı Soyadı
                    data[5], // Departman
                    data[6], // Servis
                    data[7], // Dahili
                    data[8]  // Aktiflik
                ].join(' ');

                const rowData = normalize(relevantData);

                // Arama terimiyle eşleşen satırları bul
                if (rowData.includes(searchTerm)) {
                    return true;
                }

                return false;
            }
        );

        $(document).ready(function () {
            $('#socialSecurityIsntution').addClass('layout-menu-collapsed');
            const table = $('#userTable').DataTable({
                paging: true,
                searching: true,
                ordering: true,
                info: true,
                pageLength: 25, // Başlangıçta gösterilecek satır sayısı
                lengthMenu: [25, 50, 100], // Kullanıcının seçim yapabileceği satır sayısı seçenekleri
                dom: 'lBfrtip', // lengthMenu dahil
                buttons: [
                    'copy', 'csv', 'excel', 'pdf', 'print'
                ],
                language: {
                    url: "/js/Turkish.json"
                },
                columnDefs: [
                    { orderable: false, targets: 0 } // İlk sütunun sıralanabilir olmasını engeller
                ]
            });

            // Arama input'unun değişimlerini dinleyerek tabloyu yeniden çizdiriyoruz
            $('#userTable_filter input').on('keyup', function () {
                table.draw();
            });
        });
    </script>
}

@{
    int sira = 0;
}

<!-- DataTable with Buttons -->
@if (Model != null && Model.Count > 0)
{
    <div class="card">
        <div class="card-header">
            <h5 class="card-title mb-0">Personeller</h5>
        </div>
        <div class="card-datatable table-responsive pb-0">
            <table id="userTable" class="table">
                <thead class="border-top">
                    <tr>
                        <th></th>
                        <th>Sıra</th>
                        <th>TC Kimlik No</th>
                        <th>Sicil No</th>
                        <th>Adı Soyadı</th>
                        <th>Departman</th>
                        <th>Servis</th>
                        <th>Dahili</th>
                        <th>Aktiflik</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var personel in Model)
                    {
                        { sira++; }
                        string badgeClass = personel.PersonelAktiflikDurum == Enums.PersonelAktiflikDurum.Aktif ? "bg-label-success" : personel.PersonelAktiflikDurum == Enums.PersonelAktiflikDurum.Emekli ? "bg-label-warning" : "bg-label-danger";
                        string activePassiveLabelClass = personel.PersonelAktiflikDurum == Enums.PersonelAktiflikDurum.Aktif ? "bx-pause-circle" : "bx-play-circle";
                        string activePassiveLabelText = personel.PersonelAktiflikDurum == Enums.PersonelAktiflikDurum.Aktif ? "Pasif Et" : "Aktif Et";
                        <tr>
                            <td></td>
                            <td>@sira</td>
                            <td>
                                <a href="#" class="text-body text-truncate" data-bs-toggle="modal" data-bs-target="#onboardHorizontalImageModal">
                                    <span class="fw-medium">@personel.TcKimlikNo</span>
                                </a>
                            </td>
                            <td class="text-truncate">@personel.SicilNo</td>
                            <td class="stack-column personel-adi">
                                <div class="d-flex justify-content-start align-items-center user-name">
                                    <div class="avatar-wrapper">
                                        <div class="avatar me-2 pull-up">
                                            <img src="~/img/avatars/@personel.Resim" alt="Avatar" class="rounded-circle" data-bs-toggle="modal" data-bs-target="#onboardHorizontalImageModal">
                                        </div>
                                    </div>
                                    <div class="d-flex flex-column">
                                        <span class="emp_name text-truncate" data-bs-toggle="modal" data-bs-target="#onboardHorizontalImageModal">@personel.AdSoyad</span>
                                        <small class="emp_post text-truncate text-muted">@personel.UnvanAdi</small>
                                    </div>
                                </div>
                            </td>
                            <td>@personel.DepartmanAdi</td>
                            <td class="text-nowrap">@personel.ServisAdi</td>
                            <td class="text-capitalize">@personel.Dahili</td>
                            <td><span id="aktiflik_span_@personel.TcKimlikNo" class="badge @badgeClass me-1">@personel.PersonelAktiflikDurum</span></td>
                            <td>
                                <div class="dropdown">
                                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                        <i class="bx bx-dots-vertical-rounded"></i>
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item edit-button" href="Duzenle?TcKimlikNo=@personel.TcKimlikNo">
                                            <i class="bx bx-edit-alt me-1"></i> <span>Düzenle</span>
                                        </a>

                                        <a id="activePassiveButton_@personel.TcKimlikNo" class="dropdown-item active-passive-button" href="#" data-bs-whatever="@personel.TcKimlikNo">
                                            <i class="bx @activePassiveLabelClass me-1"></i> <span>@activePassiveLabelText</span>
                                        </a>

                                        <a class="dropdown-item remove-button" href="#" data-bs-whatever="@personel.TcKimlikNo">
                                            <i class="bx bx-trash me-1"></i> <span>Sil</span>
                                        </a>

                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <div class="card">
        <p>Personel Listesi Boş!</p>
    </div>
}
